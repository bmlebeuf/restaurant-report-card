{{#if Places.places}}
    <table class="table table-striped table-bordered table-hover center">
        <thead>
            <tr>
                <th class="center">Name</th>
                <th class="center">Address</th>
                <th class="center">Grade</th>
            </tr>
        </thead>
        <tbody>
            {{#each Places.places}}
                <tr>
                    <td class="col-xs-5"><a title="View recent inspections" target="_blank" href="{{business_id}}">{{name}}</a></td>
                    <td class="col-xs-4"><a title="Open in Google Maps" target="_blank" href="https://www.google.com/maps/place/{{address}},Seattle,WA">{{address}}</a></td>
                    <td class="col-xs-3">{{{formatScore grade}}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <div class="alert alert-danger center" role="alert">No results found</div>
{{/if}}
